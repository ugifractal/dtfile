begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "dtfile"
    gem.summary = "Public uploader engine for Rails 3"
    gem.version = "0.0.1"
    gem.description = "Public uploader engine for Rails 3"
    gem.files = Dir["{lib}/**/**", "{apps}/**/**","{configs}/**/**"]
  end
rescue
  puts "Jeweler or one of its dependencies is not installed"
end
